<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center"
    android:background="#000000"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:id="@+id/lightSensotTextView"
            android:backgroundTint="#FFC107"
            android:layout_marginRight="20dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="Light Sensor"

                />



        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:id="@+id/ProximitySensorTextView"
            android:layout_gravity="center"
            android:backgroundTint="#FFC107"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="19sp"

                android:textStyle="bold"
                android:text="ProximitySensor"
                />


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>






        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:id="@+id/cardAcID"
            android:backgroundTint="#FF5722"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/accelerometertextView"
                android:text="Accelerometer and Gyroscope Sensor"
                />



        </com.google.android.material.card.MaterialCardView>






</LinearLayout>